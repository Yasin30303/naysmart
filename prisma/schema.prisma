// Prisma Schema untuk SPK SMART
// Database: NeonDB (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Model User - untuk autentikasi dengan BetterAuth
model User {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique
  emailVerified Boolean     @default(false)
  image         String?
  role          String      @default("staf") // "pemilik" atau "staf"
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relasi BetterAuth
  sessions Session[]
  accounts Account[]
  
  // Relasi aplikasi
  penjualan Penjualan[]
  
  @@index([email])
  @@map("user")
}

// BetterAuth - Session table
model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("session")
}

// BetterAuth - Account table (for OAuth providers)
model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@map("account")
}

// BetterAuth - Verification table (for email verification, password reset)
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  
  @@map("verification")
}

// Model Produk - master data produk
model Produk {
  id           String   @id @default(cuid())
  nama_produk  String   @unique
  harga        Decimal  @db.Decimal(12, 2) // Harga jual
  harga_awal   Decimal  @db.Decimal(12, 2) @default(0) // Harga modal/beli
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relasi
  stokHarian       StokHarian[]
  detailPenjualan  DetailPenjualan[]
  nilaiAlternatif  NilaiAlternatif[]
  hasilSMART       HasilSMART[]
  
  @@map("produk")
}

// Model Kriteria - kriteria penilaian SMART
model Kriteria {
  id             String   @id @default(cuid())
  nama_kriteria  String   @unique
  bobot          Decimal  @db.Decimal(5, 4) // Max 1.0000
  tipe           String   // "benefit" atau "cost"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Relasi
  nilaiAlternatif NilaiAlternatif[]
  
  @@map("kriteria")
}

// Model StokHarian - stok produk per hari
model StokHarian {
  id            String   @id @default(cuid())
  tanggal       DateTime @db.Date
  produk_id     String
  stok_awal     Int
  stok_terjual  Int      @default(0)
  stok_sisa     Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relasi
  produk Produk @relation(fields: [produk_id], references: [id], onDelete: Cascade)
  
  @@unique([tanggal, produk_id])
  @@index([tanggal])
  @@index([produk_id])
  @@map("stok_harian")
}

// Model Penjualan - header transaksi penjualan
model Penjualan {
  id        String   @id @default(cuid())
  tanggal   DateTime @db.Date
  user_id   String
  total     Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relasi
  user   User                @relation(fields: [user_id], references: [id])
  detail DetailPenjualan[]
  
  @@index([tanggal])
  @@index([user_id])
  @@map("penjualan")
}

// Model DetailPenjualan - detail item penjualan
model DetailPenjualan {
  id           String   @id @default(cuid())
  penjualan_id String
  produk_id    String
  jumlah       Int
  subtotal     Decimal  @db.Decimal(12, 2)
  createdAt    DateTime @default(now())
  
  // Relasi
  penjualan Penjualan @relation(fields: [penjualan_id], references: [id], onDelete: Cascade)
  produk    Produk    @relation(fields: [produk_id], references: [id])
  
  @@index([penjualan_id])
  @@index([produk_id])
  @@map("detail_penjualan")
}

// Model NilaiAlternatif - nilai kriteria per produk per tanggal
model NilaiAlternatif {
  id          String   @id @default(cuid())
  tanggal     DateTime @db.Date
  produk_id   String
  kriteria_id String
  nilai       Decimal  @db.Decimal(12, 4)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relasi
  produk   Produk   @relation(fields: [produk_id], references: [id], onDelete: Cascade)
  kriteria Kriteria @relation(fields: [kriteria_id], references: [id], onDelete: Cascade)
  
  @@unique([tanggal, produk_id, kriteria_id])
  @@index([tanggal])
  @@index([produk_id])
  @@index([kriteria_id])
  @@map("nilai_alternatif")
}

// Model HasilSMART - hasil perhitungan SMART
model HasilSMART {
  id           String   @id @default(cuid())
  tanggal      DateTime @db.Date
  produk_id    String
  skor_akhir   Decimal  @db.Decimal(10, 6)
  ranking      Int
  rekomendasi  String   // "tambah", "tetap", "kurangi", "hentikan"
  createdAt    DateTime @default(now())
  
  // Relasi
  produk Produk @relation(fields: [produk_id], references: [id], onDelete: Cascade)
  
  @@unique([tanggal, produk_id])
  @@index([tanggal])
  @@index([produk_id])
  @@map("hasil_smart")
}